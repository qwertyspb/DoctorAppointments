@model WebDoctorAppointment.Models.EditAppointmentViewModel
@{
    ViewData["Title"] = "Изменение";
}

<h1>Изменение</h1>

<h4>Назначение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DoctorId"></label>
                <select asp-for="DoctorId" asp-items="Model.Doctors" class="custom-select"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId"></label>
                <select asp-for="PatientId" asp-items="Model.Patients" class="custom-select"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (TempData["Alert"] != null)
{
	<div class="row">
		<div class="col-md-4">
			<div class="alert alert-danger">
				@Html.Raw(@TempData["Alert"])
			</div>
		</div>
	</div>
}

<div>
    <a asp-action="Index">Возврат к списку назначений</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
