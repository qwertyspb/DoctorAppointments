@model IEnumerable<WebDoctorAppointment.Models.AppointmentViewModel>

@{
    ViewData["Title"] = "Назначения";
    var dateFrom = DateTime.Today.ToShortDateString();
    var dateTill = DateTime.Today.AddDays(7).ToShortDateString();
}

<h3>Все назначения</h3>

<p>
    <a asp-action="Create">Добавить назначение</a>
</p>
<p>
    <a asp-action="Index">Показать назначения за период с @dateFrom по @dateTill</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(model => item.EndTime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

