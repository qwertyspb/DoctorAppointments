    ViewData["Title"] = "Удаление";
}

<h1>Удаление профиля врача</h1>

<h4>Вы дейстительно хотите удалить эту запись?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
